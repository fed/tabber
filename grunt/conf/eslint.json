{
  "env": {
    "es6": true,
    "node": true,
    "browser": true,
    "amd": true,
    "phantomjs": true
  },
  "globals": {
    "requirejs": true,
    "casper": true
  },
  "extends": "eslint:recommended",
  "rules": {
    "indent": ["error", 2, { "SwitchCase": 1 }],
    "linebreak-style": ["error", "unix"],
    "quotes": ["error", "single"],
    "semi": ["error", "always"],
    "space-before-function-paren": ["error", { "anonymous": "always", "named": "never" }],
    "newline-after-var": ["error", "always"],
    "keyword-spacing": ["error"],
    "require-jsdoc": ["off"],
    "no-console": ["off"]
  }
}
